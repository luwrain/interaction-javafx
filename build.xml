<project name="luwrain-interaction-javafx" default="jar" basedir=".">
  <path id="classpath">
    <pathelement location="."/>
     <fileset dir="lib">
      <include name="**/*.jar"/>
    </fileset>
  </path>
  <target name="clean">
    <delete dir="build"/>
    <delete dir="jar"/>
  </target>
  <target name="compile" depends="clean">
    <mkdir dir="build"/>
    <javac srcdir="src/main/java" destdir="build" source="1.8" target="1.8">
      <classpath refid="classpath"/>
    </javac>
  </target>
  <target name="jar" depends="compile">
    <mkdir dir="jar"/>
    <jar jarfile="jar/luwrain-interaction-javafx.jar">
      <fileset dir="./build">
        <include name="**/*.class"/>
      </fileset>
      <fileset dir="./src/main/java/">
        <include name="resources/*.js"/>
      </fileset>
    </jar>
  </target>
</project>
